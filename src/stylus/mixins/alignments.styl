  $_right = (length($left) > 1) ? $left[1] : $_left
  $_right = ($right == unset) ? $_right : $right

  if $_right == ''
    $_right = $_left

  if $_left != null and $_left != '-' and $_left != 'x' and $_left != 'n'
    margin-left: $_left

  if $_right != null and $_right != '-' and $_right != 'x' and $_right != 'n'
    margin-right: $_right

